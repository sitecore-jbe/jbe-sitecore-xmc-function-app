{
    "type": "AdaptiveCard",
    "msteams": {
        "width": "Full"
    },
    "body": [
        {
            "type": "TextBlock",
            "text": "${Description}",
            "wrap": true
        },
        {
            "type": "Container",
            "$data": "${$root.Fields}",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${Value}",
                    "wrap": true
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
}